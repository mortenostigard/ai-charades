{
  "name": "@ai-charades/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node --project tsconfig.server.json -r tsconfig-paths/register server.ts",
    "build": "tsc --project tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --project tsconfig.server.json --noEmit"
  },
  "dependencies": {
    "@ai-charades/shared": "*",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5"
  }
}
